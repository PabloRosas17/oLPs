#!/bin/bash

git filter-repo --commit-callback '
if commit.message == b"commit for 2018-01-01":
    commit.message = b"commit for 2018-01-01, retroactive adjustment."
elif commit.message == b"commit for 2017-01-01":
    commit.message = b"commit for 2017-01-01, retroactive adjustment."
elif commit.message == b"commit for 2016-01-01":
    commit.message = b"commit for 2016-01-01, retroactive adjustment."
elif commit.message == b"commit for 2015-01-01":
    commit.message = b"commit for 2015-01-01, retroactive adjustment."
elif commit.message == b"commit for 2014-01-01":
    commit.message = b"commit for 2014-01-01, retroactive adjustment."
elif commit.message == b"commit for 2013-01-01":
    commit.message = b"commit for 2013-01-01, retroactive adjustment."
elif commit.message == b"commit for 2012-01-01":
    commit.message = b"commit for 2012-01-01, retroactive adjustment."
elif commit.message == b"commit for 2011-01-01":
    commit.message = b"commit for 2011-01-01, retroactive adjustment."
elif commit.message == b"commit for 2010-01-01":
    commit.message = b"commit for 2010-01-01, retroactive adjustment."
' --force

git remote add origin https://github.com/PabloRosas17/oLPs.git
git push -u origin main